<h3>Edit Story</h3>
<div class="row">
  <form action="/stories/{{story._id}}" method="POST" class="col s12" enctype="application/x-www-form-urlencoded">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{story.title}}" id="title">
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status" id="status">
          {{#select story.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell us your story</h5>
        <textarea name="body" id="body" cols="30" rows="10">{{story.body}}</textarea>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <input type="submit" value="Save" class="btn">
        <input type="hidden" name="_method" value="PUT">
        <a href="/dashboard" class="btn orange">Cancel</a>
      </div>
    </div>

  </form>
</div>